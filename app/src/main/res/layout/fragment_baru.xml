<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.FragmentBaru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundSecondary"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <EditText
            android:id="@+id/KolomNIK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:fontFamily="@font/nunitobold"
            android:hint="NIK"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="@color/ColorFontSecondary"
            android:textColorHint="@color/ColorFontSecondary" />

        <EditText
            android:id="@+id/KolomNamaPasien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:fontFamily="@font/nunitobold"
            android:hint="Nama Pasien"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/ColorFontSecondary"
            android:textColorHint="@color/ColorFontSecondary" />

        <TextView
            android:id="@+id/KolomTanggalLahir"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text"
            android:fontFamily="@font/nunitobold"
            android:gravity="start"
            android:paddingLeft="17dp"
            android:paddingTop="13dp"
            android:text="Tanggal Lahir"
            android:textColor="@color/ColorFontSecondary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/KolomKontak"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:fontFamily="@font/nunitobold"
            android:hint="Nomor Kontak"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="@color/ColorFontSecondary"
            android:textColorHint="@color/ColorFontSecondary" />

        <Spinner
            android:id="@+id/SpinnerPelayanan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_edit_text"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/btnsecondary"
            android:fontFamily="@font/nunitobold"
            android:text="Daftar Sekarang"
            android:textColor="@color/ColorFontPrimary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btnback2"
            android:drawableStart="@drawable/btnback"
            android:padding="10px"
            android:text="@string/Back"
            android:textColor="@color/ColorFontPrimary" />

    </LinearLayout>

</ScrollView>