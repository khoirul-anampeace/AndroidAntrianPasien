<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundSecondary"
    tools:context=".Fragment.FragmentLama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/KolomNIK"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:fontFamily="@font/nunitobold"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:hint="NIK"
            android:textColorHint="@color/ColorFontSecondary"
            android:textColor="@color/ColorFontSecondary" />


        <EditText
            android:id="@+id/KolomNamaPasien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:fontFamily="@font/nunitobold"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:hint="Nama Pasien"
            android:textColorHint="@color/ColorFontSecondary"
            android:textColor="@color/ColorFontSecondary"/>
        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Sekarang"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btnsecondary"
            android:textStyle="bold"
            android:fontFamily="@font/nunitobold"
            android:textColor="@color/ColorFontPrimary"/>
        <Button
            android:id="@+id/buttonback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btncircle"
            android:drawableStart="@drawable/btnback"
            android:padding="10px"
            android:text="@string/Back"
            android:textColor="@color/ColorFontPrimary"/>
    </LinearLayout>
</FrameLayout>