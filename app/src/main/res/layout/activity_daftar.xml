<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundSecondary"
    tools:context=".DaftarActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp"
        android:background="@drawable/layer">

        <Button
            android:id="@+id/baru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Baru"
            android:elevation="4dp"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:textColor="@color/ColorFontSecondary"
            android:background="@drawable/btnbaru" />

        <Button
            android:id="@+id/lama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lama"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:textColor="@color/ColorFontSecondary"
            android:background="@drawable/btnlama"/>

    </LinearLayout>

    <TextView
        android:id="@+id/FullView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:padding="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Full"
        android:textColor="@color/ColorFontSecondary"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerViewB"
            android:name="com.example.androidantrianpasien.Fragment.FragmentBaru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
